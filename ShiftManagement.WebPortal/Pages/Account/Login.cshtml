@page
@model ShiftManagement.WebPortal.Pages.Account.LoginModel
@{
    Layout = "_non-dashboard-layout";
    ViewData["Title"] = "Shift Management System";
}


<div class="row row-cols-1 row-cols-lg-3 row-cols-xl-3 mt-4">
    <div class="col mx-auto">       
        <div class="card">
            <div class="card-body">
                <div class="border p-4 rounded">
                    <div class="form-body">
                        <div class="my-2 text-center">
                            <img src="~/images/logo.png" width="80" height="80" alt="" />
                        </div>
                        <form class="row g-3 needs-validation" method="post" novalidate>
                            <div class="col-12">
                                <label asp-for="@Model.LoginUser.LoginID" class="form-label"></label>
                                <input asp-for="@Model.LoginUser.LoginID" class="form-control" required value="CAdmin">
                                <div class="invalid-feedback">Username is required.</div>
                                <span asp-validation-for="@Model.LoginUser.LoginID"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="@Model.LoginUser.Password" class="form-label"></label>
                                <input asp-for="@Model.LoginUser.Password" class="form-control" required value="c1tyW@tch22#$">
                                <div class="invalid-feedback">Password is required.</div>
                                <span asp-validation-for="@Model.LoginUser.Password"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                                    <label class="form-check-label" for="flexSwitchCheckChecked">Remember Me</label>
                                </div>
                            </div>                                                       
                            <div class="col-12">
                                <div class="d-grid">                                   
                                    <button type="submit" class="btn btn-primary"><i class="bx bxs-lock-open"></i>Login</button>
                                    <div class="mt-2 text-danger" asp-validation-summary="All"></div>
                                </div>
                            </div>
                            <div class="col-md-12 text-center">
                                <a href="authentication-forgot-password.html">Forgot Password ?</a>
                            </div>
                        </form>
                        <div class="login-separater text-center mb-4">
                            <span>Don't have an account yet ?</span>
                            <hr />
                        </div>
                        <div class="col-md-12 text-center">
                            <p>
                                 <a href="/Account/Signup">Register</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

