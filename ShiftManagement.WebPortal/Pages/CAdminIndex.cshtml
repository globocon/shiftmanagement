<div class="row">
	<div class="col-12 col-xl-12 d-flex">
		<div class="card radius-10 w-100">
			<div class="card-body">
				<div class="d-flex align-items-center">
					<div>
						<h5 class="mb-0">Clients (Company Admin View)</h5>
					</div>
					<div class="font-22 ms-auto">
						<i class='bx bx-dots-horizontal-rounded'></i>
					</div>
				</div>
			</div>
			<div class="customers-list p-3 mb-3">

				@{
					foreach (var cl in Model.ClientsList)
					{
						var clientimg = "/images/clients/Noimage.jfif";
						if (cl.ImageExtn != null)
						{
							clientimg = "/images/clients/" + cl.Id.ToString() + cl.ImageExtn;
						}
						<div class="customers-list-item d-flex align-items-center border-bottom p-2 cursor-pointer">
							<div class="">
								<img src=@clientimg class="rounded-circle" width="46" height="46" alt="clientImage_@cl.Id.ToString()" asp-append-version="true" />
							</div>
							<div class="ms-2">
								<h6 class="mb-1 font-14">@cl.Name</h6>
								<p class="mb-0 font-13 text-secondary">@cl.Emails</p>
							</div>
							<div class="list-inline d-flex customers-contacts ms-auto">
								<a href="javascript:;" class="list-inline-item text-primary border-primary viewclient" data-clientid="@cl.Id" data-clientname="@cl.Name"><i class='fa fa-eye'></i></a>
								<a href="javascript:;" class="list-inline-item text-primary border-primary editclient" data-clientid="@cl.Id" data-clientname="@cl.Name"><i class='bx bxs-pencil'></i></a>
								<a href="javascript:;" class="list-inline-item text-danger border-danger deleteclient" data-clientid="@cl.Id" data-clientname="@cl.Name"><i class='bx bx-trash'></i></a>
							</div>
						</div>
					}
				}
			</div>
		</div>
	</div>
</div>

