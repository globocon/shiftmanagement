                        <li>
                            <a href="/ShiftAdmin">
                                <div class="parent-icon">
                                    <i class="bx bx-book-open"></i>
                                </div>
                                <div class="menu-title">Shifts</div>
                            </a>
                        </li>

                    }
                    else if (userClaimsRole == RoleType.Staff.ToString())
                    {
                        <li>
                            <a href="/vieweditrequests">
                                <div class="parent-icon">
                                    <i class="bx bx-book-open"></i>
                                </div>
                                <div class="menu-title">Shifts</div>
                            </a>
                        </li>
                    }

