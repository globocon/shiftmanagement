@model ShiftManagement.Data.Models.Clients

@{

}

<div class="row">
	<div class="col-lg-4">
		<div class="card">
			<div class="card-body">
				<div class="d-flex flex-column align-items-center text-center">
					@{
						var clientimg = "/images/clients/Noimage.jfif";
						if (Model.ImageExtn != null)
						{
							clientimg = "/images/clients/" + Model.Id.ToString() + Model.ImageExtn;
						}
					}
					<img src=@clientimg alt="@Model.DisplayName" class="rounded-circle p-1 bg-primary" width="110" asp-append-version=true>
					<div class="mt-3">
						<h4>@Model.DisplayName</h4>
						<p class="text-secondary mb-1">Full Stack Developer</p>
						<p class="text-muted font-size-sm">@Model.Address</p>
						<button class="btn btn-primary">Follow</button>
						<button class="btn btn-outline-primary">Message</button>
					</div>
				</div>
				<hr class="my-4" />
				<ul class="list-group list-group-flush">
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe me-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
						<span class="text-secondary">https://codervent.com</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github me-2 icon-inline"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>Github</h6>
						<span class="text-secondary">codervent</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter me-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
						<span class="text-secondary">codervent</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram me-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</h6>
						<span class="text-secondary">codervent</span>
					</li>
					<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
						<h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook me-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
						<span class="text-secondary">codervent</span>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<style>
		.form-control::placeholder {
			color: #6c757d; /* Bootstrap's default placeholder color */
			opacity: 1; /* Firefox's default placeholder opacity */
			font-size: 14px;
		}

		.fontSize {
			font-size: 14px; /* Adjust the font size as needed */
		}

		.col-form-label {
			white-space: nowrap;
		}
	</style>
	<div class="col-lg-8 ">
		<div class="card">
			<div class="card-body fontSize">
				<div class="row mb-3">
					<div class="col-sm-3">
						
						<label for="Name" class="col-sm-3 col-form-label">Name:</label>
					</div>
					<div class="col-sm-9 text-secondary">
						<input type="checkbox" class="form-check-input" id="useSalutationCheckbox" checked="checked" />
						<label class="form-check-label" for="useSalutationCheckbox">Use Salutation</label>
						<div class="col-sm-3">
							<select class="form-select fontSize" id="Salutation">

								@if (Model.Salutation != null && Model.Salutation.Any())
								{

									<option>@Model.Salutation</option>

								}
								else
								{
									<option selected>Mr.</option>
									<option>Mrs.</option>
									<option>Miss</option>
									<option>Ms.</option>
									<option>Mx.</option>
									<option>Dr.</option>
									<option>Prof.</option>
								}
							</select>
							
						</div>
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-sm-3"></div>
					<div class="col-sm-3 text-secondary">
						<input asp-for="@Model.FirstName" class="form-control" value="@Model.FirstName" placeholder="Enter First Name" />
					</div>
					<div class="col-sm-3 text-secondary">
						<input asp-for="@Model.SecondName" class="form-control" value="@Model.SecondName" placeholder="Enter Middle Name" />
					</div>
					<div class="col-sm-3 text-secondary">						
						<input asp-for="@Model.LastName" class="form-control" value="@Model.LastName" placeholder="Enter Last Name" />
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-sm-3">
						<label for="DisplayName" class="col-sm-3 col-form-label">Display Name:</label>
					</div>
					<div class="col-sm-9 text-secondary">
						<input asp-for="@Model.DisplayName" class="form-control" value="@Model.DisplayName" placeholder="Enter Display Name" />
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-sm-3">
					<label for="Gender" class="col-sm-3 col-form-label">Gender:</label>
					</div>
					<div class="col-sm-3">
					<select class=" form-select fontSize" id="Gender">
					
					@if (Model.Gender != null && Model.Gender.Any())
					{
      
							<option>@Model.Gender</option>
       
					}
					else
					{
						<option>Male</option>
						<option>Female</option>
						<option>Other</option>
					}
				</select>
					</div>
					<div class="col-sm-3">
					<label for="dobPicker" class="col-sm-3 col-form-label">Date of Birth</label>
					</div>
					<div class="col-sm-3">
						<input type="date" class="form-control" id="dobPicker" placeholder="Pick a date">
					</div>
					
				</div>

				<div class="row mb-3">
					<div class="col-sm-3">
				
						<label for="Address" class="col-sm-3 col-form-label">Address:</label>
						
					</div>
					<div class="col-sm-9 text-secondary">
						<input asp-for="@Model.Address" class="form-control" value="@Model.Address" placeholder="Enter Address" />
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-sm-3">
						
						<label for="Unit/Apartment No" class="col-sm-3 col-form-label">Unit/ Apartment No:</label>
					</div>
					<div class="col-sm-9 text-secondary">
						
						<input asp-for="@Model.UnitOrApartmentNo" class="form-control" value="@Model.UnitOrApartmentNo" placeholder="Enter Unit/ Apartment No" />
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-sm-3">
						
						<label for="Contact" class="col-sm-3 col-form-label">Contact:</label>
					</div>
					<div class="col-sm-3 text-secondary">
						
						<input asp-for="@Model.Mobile" class="form-control" value="@Model.Mobile" placeholder="Enter Mobile No" />
					</div>
					<div class="col-sm-3 text-secondary">
						
						<input asp-for="@Model.Phone" class="form-control" value="@Model.Phone" placeholder="Enter Phone No" />
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-sm-3">
						
						<label for="Email" class="col-sm-3 col-form-label">Email:</label>
					</div>
					<div class="col-sm-9 text-secondary">
						<input asp-for="@Model.Email" class="form-control" value="@Model.Email" placeholder="Enter Email" />
					</div>
				</div>

				<div class="row mb-3">
					<label for="maritalStatusSelect" class="col-sm-3 col-form-label">Marital Status:</label>
					<div class="col-sm-3">
					
						<select class="form-select fontSize" id="MaritalStatus">
							
							@if (Model.MaritalStatus != null && Model.MaritalStatus.Any())
							{

								<option>@Model.MaritalStatus</option>

							}
							else
							{
								<option value="" selected>Select</option>
								<option>Single</option>
								<option>Married</option>
								<option>Divorced</option>
								<option>Separated</option>
								<option>Widowed</option>
							}
						</select>
					</div>

				</div>

				<div class="row mb-3">
					<div class="col-sm-3">
						
						<label for="Nationality" class="col-sm-3 col-form-label">Nationality:</label>
					</div>
					<div class="col-sm-9 text-secondary">
						<input asp-for="@Model.Nationality" class="form-control" value="@Model.Nationality" placeholder="Enter Your Nationality" />
					</div>
				</div>
				<div class="row mb-3">
					<div class="col-sm-3">
						
						<label for="Languages" class="col-sm-3 col-form-label">Languages:</label>
					</div>
					<div class="col-sm-9 text-secondary">
						<input asp-for="@Model.Languages" class="form-control" value="@Model.Languages" placeholder="Enter Languages" />
					</div>
				</div>

				<div class="row mb-3">
					<div class="col-sm-3">
						
						<label for="Client Status" class="col-sm-3 col-form-label">Client Status:</label>
					</div>
					<div class="col-sm-9 text-secondary">
						
						<input asp-for="@Model.ClientStatus" type="checkbox" class="form-check-input" />						
						<label class="form-check-label" for="useClientStatusCheckbox">Client is a prospect</label>

					</div>
				</div>
				<div class="row">
					<div class="col-sm-3"></div>
					<div class="col-sm-9 text-secondary text-end">
						<input id="btn_Cancel" type="button" class="btn btn-primary px-4 btncancel" value="Cancel" />
						<input id="btn_Save" type="button" class="btn btn-primary px-4 btnsave" value="Create" />
					</div>
				</div>
			</div>
		</div>

	</div>
</div>
