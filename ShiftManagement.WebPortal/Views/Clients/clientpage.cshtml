@model ShiftManagement.Data.Models.PublicClient
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_non-dashboard-layout";
    ViewData["Title"] = "Shift Management System";
}

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-2 row-cols-xl-2 mt-4">
    <div class="col mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="border p-4 rounded">
                    <div class="form-body">
                        <div class="my-2 text-center">
                            <img src="~/images/logo.png" width="40" height="40" alt="" />
                        </div>
                        <form id="frm-public-new-staff" asp-action="clientpage" asp-controller="Clients" class="row g-2 needs-validation" method="post" novalidate>
                            <input type="hidden" asp-for="@Model.CompanyId" id="hdinp-Comp-id" value="@Model.CompanyId" />
                            <div class="col-12">
                                <label asp-for="@Model.Name" class="form-label"></label>
                                <input asp-for="@Model.Name" class="form-control" required value="@Model.Name">
                                <div class="invalid-feedback">Name is required.</div>
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.Emails" class="form-label">@Model.Emails</label>
                                <input asp-for="@Model.Emails" class="form-control" required value="@Model.Emails">
                                <div class="invalid-feedback">Email is required.</div>
                                <span asp-validation-for="@Model.Emails"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.Phone" class="form-label"></label>
                                <input asp-for="@Model.Phone" class="form-control" required value="@Model.Phone">
                                <div class="invalid-feedback">Phone number is required.</div>
                                <span asp-validation-for="@Model.Phone"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="@Model.Address" class="form-label"></label>
                                <textarea asp-for="@Model.Address" class="form-control" required value="@Model.Address"></textarea>                               
                                <div class="invalid-feedback">Address is required.</div>
                                <span asp-validation-for="@Model.Address"></span>
                                @*  @Html.TextBoxFor(model => model.Address, new { @class = "form-control", required = "required" }) *@
                               @*  @Html.ValidationMessageFor(m => m.Address, "Address is required.", new { @class = "invalid-feedback" }) *@
                                
                            </div>
                            <div class="col-12 mt-3 text-center">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary col-md-6"><i class='bx bx-key'></i>Request Access</button>
                                    <div class="mt-2 text-danger" asp-validation-summary="All"></div>
                                </div>
                            </div>
                        </form>
                        <div class="login-separater text-center mb-0">
                            <span>Already have an account ?</span>
                            <hr />
                        </div>
                        <div class="col-md-12 text-center">
                            <p>
                                <a href="/Account/login">Sign in here</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    @section Scripts {
    <script type="text/javascript">
        window.onload = function () {
            var message = "@TempData["Message"]";
            var messagetype = "@TempData["MessageType"]";

            if (messagetype == 'S') {
                alert_success(message)
            } else {
                alert_error(message);
            }
        }
    </script>
    }

}