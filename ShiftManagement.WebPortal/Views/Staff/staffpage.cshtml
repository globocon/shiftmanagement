
@model ShiftManagement.Data.Models.PublicEmployee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_non-dashboard-layout";
    ViewData["Title"] = "Shift Management System";
}

<div class="row row-cols-1 row-cols-lg-1 row-cols-xl-1 mt-4">
    <div class="col mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="border p-4 rounded">
                    <div class="form-body">
                        <div class="my-2 text-center">
                            <img src="~/images/logo.png" width="40" height="40" alt="" />
                        </div>
                        <form id="frm-public-new-staff" class="row g-2 needs-validation" method="post" novalidate>
                            <input type="hidden" asp-for="@Model.CompanyId" id="hdinp-Comp-id" value="@Model.CompanyId" />
                            <div class="col-12">
                                <label asp-for="@Model.Name" class="form-label"></label>
                                <input asp-for="@Model.Name" class="form-control" required value="@Model.Name">
                                <div class="invalid-feedback">Name is required.</div>
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.Phone" class="form-label">@Model.Phone</label>
                                <input asp-for="@Model.Phone" class="form-control" required value="@Model.Phone"> 
                                <div class="invalid-feedback">Phone is required.</div>
                                <span asp-validation-for="@Model.Phone"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.EmployementTypeId" class="form-label"></label>
                                <input asp-for="@Model.EmployementTypeId" class="form-control" required value="">
                                <div class="invalid-feedback">Employement Type is required.</div>
                                <span asp-validation-for="@Model.EmployementTypeId"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.DOB" class="form-label"></label>
                                <input asp-for="@Model.DOB" class="form-control" required value="">
                                <div class="invalid-feedback">Date of birth is required.</div>
                                <span asp-validation-for="@Model.DOB"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="@Model.DOJ" class="form-label"></label>
                                <input asp-for="@Model.DOJ" class="form-control" required value="">
                                <div class="invalid-feedback">Date of joining is required.</div>
                                <span asp-validation-for="@Model.DOJ"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="@Model.ImageExtn" class="form-label"></label>
                                <input type="file" asp-for="@Model.ImageExtn" class="form-control">
                                <div class="invalid-feedback">ImageExtn is required.</div>
                                <span asp-validation-for="@Model.ImageExtn"></span>
                            </div>
                            <div class="col-12 mt-3 text-center">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary col-md-4"><i class='bx bx-key'></i>Request Access</button>
                                    <div class="mt-2 text-danger" asp-validation-summary="All"></div>
                                </div>
                            </div>
                        </form>
                        <div class="login-separater text-center mb-0">
                            <span>Already have an account ?</span>
                            <hr />
                        </div>
                        <div class="col-md-12 text-center">
                            <p>
                                <a href="/Account/login">Sign in here</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

